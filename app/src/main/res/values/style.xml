<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/textColorBlack</item>
        <item name="boxBackgroundColor">@null</item>
        <item name="colorPrimaryDark">@color/textColorWhite</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/textColorSecondary</item>
<!--        <item name="hintTextAppearance">@style/InputLayoutHintAppearance</item>-->
        <item name="hintEnabled">true</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8sdp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">#F3F3F3</item>
    </style>


    <style name="EditTextStyle" parent="TextViewStyleBase">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:theme">@style/EditTextTheme</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">@color/textColorSecondary</item>
        <item name="colorControlActivated">@color/textColorSecondary</item>
        <item name="colorControlHighlight">@color/textColorSecondary</item>
    </style>

    <style name="InputLayoutHintAppearance" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="hintTextColor">@color/textColorBlack</item>
    </style>

    <style name="InputLayoutHintAppearanceDisble" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="hintTextColor">@color/gray</item>
    </style>

</resources>